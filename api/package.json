{
  "name": "paylinksro-api",
  "version": "0.1.0",
  "description": "Express API for PayLinksro with TypeScript, Prisma, Zod, and magic link auth",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.17"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p .",
    "start": "node dist/server.js",
    "lint": "echo 'Add eslint later'",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "stripe:webhook": "stripe listen --forward-to localhost:4000/webhooks/stripe"
  },
  "author": "Mandy9943",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "stripe": "^18.4.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.14",
    "pino": "^9.3.2",
    "pino-http": "^9.0.0",
    "pino-pretty": "^11.3.0",
    "resend": "^6.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.14.12",
    "prisma": "^5.18.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.3",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
